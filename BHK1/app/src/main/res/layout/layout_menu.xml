<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="match_parent"
    android:background="#99ccFF"
    android:orientation="vertical"
    android:padding="20dp">


    <com.curry.bhk.bhk.view.CircleImageView
        android:id="@+id/menu_head_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/defult_img" />

    <TextView
        android:id="@+id/menu_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="username"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <include layout="@layout/divider" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="240dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/menu_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="menu_onClick"
                android:text="New"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/menu_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="menu_onClick"
                android:text="Pending"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/menu_on_Hold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="menu_onClick"
                android:text="On Hold"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/menu_Resolved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="menu_onClick"
                android:text="Resolved"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/menu_Profiled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="menu_onClick"
                android:text="Profiled"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/menu_About"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:onClick="menu_onClick"
                android:text="About"
                android:textColor="#ffffff"
                android:textSize="22sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>